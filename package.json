{
  "name": "yarfl",
  "version": "0.0.3",
  "description": "Yet Another Redux Forms Library",
  "author": {
    "name": "Axel Yung",
    "email": "axelyung@gmail.com",
    "url": "https://github.com/axelyung"
  },
  "license": "MIT",
  "homepage": "https://github.com/axelyung/redux-validated.git#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axelyung/redux-validated.git"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "unpkg": "dist/yarfl.min.js",
  "jsdelivr": "dist/yarfl.min.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "keywords": [
    "react",
    "redux",
    "forms",
    "async",
    "validation",
    "immutable"
  ],
  "scripts": {
    "reset": "rimraf node_modules && yarn cache clean && yarn",
    "test": "jest",
    "clean": "rimraf es lib dist",
    "watch": "yarn build:es --watch",
    "build:es": "tsc -P tsconfig.build.json",
    "build:cjs": "cross-env BABEL_ENV=commonjs babel es --out-dir lib",
    "build:umd": "cross-env BABEL_ENV=es NODE_ENV=development rollup -c",
    "build:umd-min": "cross-env BABEL_ENV=es NODE_ENV=production rollup -c",
    "build": "run-s clean build:*"
  },
  "peerDependencies": {
    "react": "^15.3.0 || ^16.0.0",
    "react-redux": "^4.0.0 || ^5.0.3",
    "redux": "^3.0.0 || ^4.0.0",
    "redux-thunk": "^2.3.0"
  },
  "dependencies": {
    "camel-case": "^3.0.0",
    "param-case": "^2.1.1",
    "ramda": "^0.25.0",
    "redux-thunk": "^2.3.0",
    "sentence-case": "^2.1.1",
    "title-case": "^2.1.1",
    "validatorjs": "^3.14.2"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.3",
    "@types/ramda": "^0.25.34",
    "@types/react": "^16.4.5",
    "@types/react-redux": "^6.0.3",
    "@types/redux": "^3.6.0",
    "@types/validatorjs": "^3.7.1",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "cross-env": "^5.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-adapter-react-16": "^1.1.1",
    "immutable": "^3.8.2",
    "jest": "^23.2.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.62.0",
    "rollup-plugin-analyzer": "^2.0.3",
    "rollup-plugin-babel": "^3.0.5",
    "rollup-plugin-node-resolve-and-alias": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.test.json"
      }
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(tsx?)$",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "src/(.*)$": "<rootDir>/src/$1",
      "tests/(.*)$": "<rootDir>/tests/$1"
    }
  },
  "optionalDependencies": {}
}
